doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login
    style.
      *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
      }
      .box{
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      }
      legend{
      font-size: 2.3rem;
      font-weight: bold;
      font-family: Georgia, 'Times New Roman', Times, serif;
      }
      fieldset{
      padding: 1rem 1rem;
      border-radius: 3%;
      }
      .btn{
      width: 30%;
      border: none;
      height: 5vh;
      background-color: blueviolet;
      color: white;
      cursor: pointer;
      border-radius: 3%;
      }
      .input{
      width: 100%;
      height: 5vh;
      border: 2px solid lightblue;
      padding: 1rem 1rem;
      }
      input{
      font-size: 1.2rem;
      }
      label{
      font-size: 1.4rem;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      a{
            font-size: 1.3rem;
            float:right;
        }
  body
    .box
      fieldset
        legend(align="center") Login
        form(method="POST" action="/signin")
          label(for="name") Name :  
          input.input(type="text" name="username" placeholder="Enter Your Name" required="")
          br
          br
          label(for="password") Password :  
          input.input(type="password" name="password" placeholder="Enter Your Password" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 3}$" required="")
          br
          br
          center
            input.btn(type="submit" align="center" value="Login")
          br
          br
          a(href="/register" target="_blank") New User? SignUp Here
          br
