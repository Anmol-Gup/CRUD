html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Details
    style.
      *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
      }
      div{
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      }
      legend{
      font-size: 2.3rem;
      font-weight: bold;
      font-family: Georgia, 'Times New Roman', Times, serif;
      }
      fieldset{
      padding: 1rem 1rem;
      border-radius: 3%;
      }
      label{
      font-size: 1.4rem;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      a{
            font-size: 1.3rem;
            float:right;
       }
  body
    div
      fieldset
        legend(align="center") Details
        label(for='Name') Name: &nbsp;#{data.username}
        br
        label(for='Email') Email: &nbsp;#{data.mail}
        br
        label(for='Password') Pasword: &nbsp;#{data.password}
        br
        label(for='Gender') Gender: &nbsp;#{data.gender}
        br
        br
        a(href="/show" target="_blank") Login
        br  