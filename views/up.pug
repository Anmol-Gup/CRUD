doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Update
    style.
      *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
      }
      .box{
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      }
      legend{
      font-size: 2.3rem;
      font-weight: bold;
      font-family: Georgia, 'Times New Roman', Times, serif;
      }
      fieldset{
      padding: 1rem 1rem;
      border-radius: 3%;
      }
      .btn{
      width: 30%;
      border: none;
      height: 5vh;
      background-color: blue;
      color: white;
      cursor: pointer;
      border-radius: 3%;
      }
      .input{
      width: 100%;
      height: 5vh;
      border: 2px solid lightblue;
      padding: 1rem 1rem;
      }
      input{
      font-size: 1.2rem;
      }
      label{
      font-size: 1.4rem;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      a{
            font-size: 1.3rem;
            float:right;
        }
